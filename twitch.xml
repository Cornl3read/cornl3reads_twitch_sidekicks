<config>
	<append xpath="/twitch">

        <action name="twitch_WolfFriend" extends="twitch_boomZombie">
			<property name="command" value="#spawn_sidekick" />
			<property name="command_key" value="TwitchAction_SpawnWolfFriendCommand" />
			<property name="title_key" value="TwitchAction_SpawnWolfFriend" />
			<property name="description_key" value="TwitchAction_SpawnWolfFriendDesc" />
			<property name="start_gamestage" value="35" />
			<property name="event_name" value="spawn_sidekick" />
			<property name="default_cost" value="200" />
			<property name="cooldown" value="120" />
			<property name="enabled" value="true" />
		</action>

		<action name="twitch_BigWolfFriend" extends="twitch_boomZombie">
			<property name="command" value="#spawn_bigsidekick" />
			<property name="command_key" value="TwitchAction_SpawnBigWolfFriendCommand" />
			<property name="title_key" value="TwitchAction_SpawnWolfFriend" />
			<property name="description_key" value="TwitchAction_SpawnBigWolfFriendDesc" />
			<property name="start_gamestage" value="70" />
			<property name="event_name" value="spawn_bigsidekick" />
			<property name="default_cost" value="350" />
			<property name="cooldown" value="120" />
			<property name="enabled" value="true" />
		</action>

		<action name="twitch_DeadBearFriend" extends="twitch_boomZombie">
			<property name="command" value="#spawn_deadsidekick" />
			<property name="command_key" value="TwitchAction_SpawnDeadBearFriendCommand" />
			<property name="title_key" value="TwitchAction_SpawnDeadBearFriend" />
			<property name="description_key" value="TwitchAction_SpawnDeadBearFriendDesc" />
			<property name="start_gamestage" value="120" />
			<property name="event_name" value="spawn_deadsidekick" />
			<property name="default_cost" value="500" />
			<property name="cooldown" value="120" />
			<property name="enabled" value="true" />
		</action>

    </append>
</config>
